<div class="container w-75 p-3" id="showall">
{% for sensor in config.keys() %}
	<div >	
	<h1 class="display-3">{{config[sensor]['location']}}</h1>
	<form>
		<input type="hidden" id="i_code" name="code" value="{{sensor}}">
		<div class="input-group">
			<input class="form-control-lg" type="text" id="temperature-{{sensor}}" size="4" name="temperature" value="{{config[sensor]['temp']}}">
			<span class="input-group-text">Â° C</span>
			<button type="button" class="btn btn-primary btn-lg" hx-post="http://192.168.2.21:8888/config-hx/" hx-target="#showall" hx-swap="outerHTML">Save</button>
		</div>

		{% if config[sensor].service=="overnight" %}
			<div class="form-check">
				<input class="form-check-input" type="radio" id="servicetype-overnight" name="service" value="overnight" checked>
				<label class="form-check-label" for="servicetype-overnight">Night service only</label>
			</div>
			<div class="form-check">
				<input class="form-check-input" type="radio" id="servicetype-on" name="service" value="on">
				<label class="form-check-label" for="servicetype-on">All day service</label>
			</div>
			<div class="form-check">
				<input class="form-check-input" type="radio" id="servicetype-off" name="service" value="off">
				<label class="form-check-label" for="servicetype-off">Off</label>
			</div>
		{% elif config[sensor].service=="on"  %}
			<div class="form-check">
				<input class="form-check-input" type="radio" id="servicetype-overnight" name="service" value="overnight">
				<label class="form-check-label" for="servicetype-overnight">Night service only</label>
			</div>
			<div class="form-check">
				<input class="form-check-input" type="radio" id="servicetype-on" name="service" value="on" checked>
				<label class="form-check-label" for="servicetype-on">All day service</label>
			</div>
			<div class="form-check">
				<input class="form-check-input" type="radio" id="servicetype-off" name="service" value="off">
			<label class="form-check-label" for="servicetype-off">Off</label>
			</div>
		{% else %}
			<div class="form-check">
				<input class="form-check-input" type="radio" id="servicetype-overnight" name="service" value="overnight">
				<label class="form-check-label" for="servicetype-overnight">Night service only</label>
		         </div>
			<div class="form-check">
				<input class="form-check-input" type="radio" id="servicetype-on" name="service" value="on">
				 <label class="form-check-label" for="servicetype-on">All day service</label>
			</div>
			<div class="form-check">
				<input class="form-check-input" type="radio" id="servicetype-off" name="service" value="off" checked>
				<label class="form-check-label" for="servicetype-off">Off</label>
			</div>
		{% endif %}

	</form>
	</div>
{% endfor %}
</div>
